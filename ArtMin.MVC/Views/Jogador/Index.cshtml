@model IEnumerable<ArtMin.Application.ViewModels.JogadorViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Jogadores Cadastrados</h2>

<p>
    @Html.ActionLink("Novo Cadastro", "Create")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Goleiro)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Admin)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ativo)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            @Html.HiddenFor(modelItem => item.JogadorId)

            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Goleiro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Admin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ativo)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.JogadorId }) |
                @Html.ActionLink("Detalhes", "Details", new { id = item.JogadorId }) |

                <button type="button" class=" btn btn-link" data-toggle="modal" data-target="#ConfirmacaoRemocao">
                    Remover
                </button>
            </td>
        </tr>
    }

</table>

@section scripts {
    @Scripts.Render("~/Scripts/Views/Jogador/Jogador.js")
}

@Html.Partial("../Shared/Jogador/_Modais")